<h1>Edit Song</h1>

<div id="errors">
  <ul>
    <% @song.errors.full_messages.each do |m| %>
      <li><%= m %></li>
    <% end %>
  </ul>
</div>

<%= form_for @song do |f| %>
  <p><%= f.label "Title:" %> <%= f.text_field :title %></p>
  <p><%= f.check_box :released %> <%= f.label "Released" %></p>
  <p><%= f.label "Release Year:" %><%= f.text_field :release_year %></p>
  <p><%= f.label "Artist Name:" %> <%= f.text_field :artist_name %></p>
  <p><%= f.label "Genre:" %> <%= f.text_field :genre %></p>
  <p><%= f.submit %></p>
<% end %>
